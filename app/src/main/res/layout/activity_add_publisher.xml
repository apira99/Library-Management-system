<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/c1"
    android:alpha="0.5">

    <EditText
        android:id="@+id/editTextPublisherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter publisher name"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/editTextPublisherAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter publisher address"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/editTextPublisherPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter publisher phone number"
        android:textColorHint="@color/black"/>

    <Button
        android:id="@+id/buttonAddPublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Add Publisher" />

</LinearLayout>