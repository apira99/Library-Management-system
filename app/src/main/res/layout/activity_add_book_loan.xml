<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/c1"
    android:alpha="0.5">

    <EditText
        android:id="@+id/access_no_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter access number"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/branch_id_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter branch ID"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/card_no_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter card number"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/date_out_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter date out"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/date_due_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter date due"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/date_returned_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter date returned"
        android:textColorHint="@color/black"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add Book Loan" />

</LinearLayout>